extends layout

block content
  .container.col-md-6
  // head form
  section
    h1 Admin Login
  // end head form
  // body form
  section.col-md-12
    form(method='post', action='/users/login')
      form.form-horizontal
        .form-group.barra
          label.col-md-8.control-label(for='inputEmail3') username
          .col-md-12
            input#inputEmail3.form-control(type='text', name='username', placeholder='username')
        .form-group.barra
          label.col-md-8.control-label(for='inputPassword3') Password
          .col-md-12
            input#inputPassword3.form-control(type='password', name='password', placeholder='Password')
        .form-group.barra
          .col-md-12
            button.btn.center-block(type='submit') Sign in
  // end body form
  // foot form
  section
  // end foot form

